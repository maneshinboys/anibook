  <main>
    <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"> 
         <h1>編集画面</h1>
         
    <% if @book.errors.any? %>
    <div class= "errors">
      <div class="errors-head"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
      <% @book.errors.full_messages.each do |message| %>
        <div class= "errors-content">
          <ul>
            <li class="errors-text"><%= message %></li>
          </ul>
        </div>
      <% end %>
    </div>
   <% end %>
   
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label class="form-label">タイトル</label>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">編集内容</label>
          <%= f.text_area :body, autofocus: true, class: "form-control" %>
        </div>
        <%= f.submit '編集を保存', class: "btn btn-success" %>
      <% end %>
     <%= link_to '戻る', book_path(@book.id) %>
     </div>
    </div>
  </div>
  </main>
  
