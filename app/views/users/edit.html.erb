<main>
 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>ユーザー情報</h2>
        <% if @user.errors.any? %>
        <div class= "errors">
          <div class="errors-head"><%= @user.errors.count %>error prohibited this obj from being saved:</div>
          <% @user.errors.full_messages.each do |message| %>
            <div class= "errors-content">
              <ul><li class="errors-text"><%= message %></li></ul>
            </div>
          <% end %>
        </div>
        <% end %>
       <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <label class="form-label">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">画像</label><br>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label class="form-label">自己紹介</label>
          <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
        </div>
        <%= f.submit 'Update User', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
 </div>
</div>
</main>