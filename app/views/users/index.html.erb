<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        
        <h2>ユーザー情報</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg" %>
          </tr>
          <tr>
            <th>名前</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>　 
        <div class='row'>
          <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
       <div class="form-group">
         <h2 class="mt-3">投稿作成</h2>
         <%= form_with model:@book, local:true do |f| %>
         <div class="form-group">
           <label for="book_title">タイトル</label>
           <%= f.text_field :title, class: "form-control"%>
         </div>
         <div class="form-group">
           <label for="book_opinion">愛を語ろう！</label>
           <%= f.text_area :body, class: "form-control"%>
         </div>
         <div><%= f.submit '投稿する', class: "btn btn-success" %></div>
         <% end %>
      </div>
      </div>
      
  
      <div class='col-md-8 offset-md-1'>
        <h2>ユーザー一覧</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>ユーザー画像</th>
              <th>ユーザー名</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr> 
             <td><%= attachment_image_tag user, :profile_image, fallback: "default-image.jpg" %></td>
             <td><%= user.name %></td>
             <td><%= link_to "詳細", user_path(user.id), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>